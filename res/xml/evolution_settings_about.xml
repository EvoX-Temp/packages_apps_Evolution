<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/evolution_about_title">

    <!-- Evolution X logo -->
    <com.android.settingslib.widget.LayoutPreference
        android:key="evolution_logo"
        android:layout="@layout/evolution_logo"
        android:clickable="true"
        settings:controller="com.android.settings.deviceinfo.firmwareversion.EvolutionXLogoPreferenceController"/>

    <!-- About Evolution X -->
    <PreferenceCategory
        android:key="evolution_about_summary"
        android:title="@string/evolution_about_summary" />

        <Preference
            android:selectable="false"
            settings:searchable="false"
            android:summary="@string/evolution_about_info_summary" />

        <!-- Evolution X Changelog -->
        <Preference
            android:key="evolution_changelog"
            android:icon="@drawable/ic_changelog"
            android:title="@string/changelog_evolution_title"
            android:summary="@string/changelog_evolution_summary">
            <intent android:action="android.intent.action.MAIN"
                 android:targetPackage="com.android.settings"
                 android:targetClass="com.evolution.settings.fragments.about.ChangelogActivity"/>
        </Preference>

        <Preference
            android:title="@string/evolution_website_title"
            android:icon="@drawable/ic_settings_evolution_about"
            android:summary="@string/evolution_website_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://evolution-x.org" />
        </Preference>

        <Preference
            android:title="@string/evolution_telegram_title"
            android:icon="@drawable/ic_telegram"
            android:summary="@string/evolution_telegram_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/EvolutionX" />
        </Preference>

        <Preference
            android:title="@string/evolution_twitter_title"
            android:icon="@drawable/ic_twitter"
            android:summary="@string/evolution_twitter_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://twitter.com/EvolutionXROM" />
        </Preference>

        <Preference
            android:title="@string/evolution_github_title"
            android:icon="@drawable/ic_github"
            android:summary="@string/evolution_github_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/Evolution-X" />
        </Preference>

    <!-- Team Evolution X -->
    <PreferenceCategory
        android:key="about_team"
        android:title="@string/evolution_about_team" />

        <Preference
            android:title="@string/evolution_about_founder_1"
            android:summary="@string/evolution_about_founder_1_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://linktr.ee/joeyhuab" />
        </Preference>

        <Preference
            android:title="@string/evolution_about_founder_2"
            android:summary="@string/evolution_about_founder_2_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/Anierin_Bliss" />
        </Preference>

        <Preference
            android:title="@string/evolution_about_founder_3"
            android:summary="@string/evolution_about_founder_3_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/RealAkito" />
        </Preference>

        <Preference
            android:title="@string/evolution_about_source_staff"
            android:summary="@string/evolution_about_source_staff_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/tejas101k" />
        </Preference>

        <Preference
            android:title="@string/evolution_about_mr_staff_1"
            android:summary="@string/evolution_about_mr_staff_1_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/Justasic" />
        </Preference>

        <Preference
            android:title="@string/evolution_about_mr_staff_2"
            android:summary="@string/evolution_about_mr_staff_2_summary">
