<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/themes_title">

    <Preference
        android:key="dark_ui_mode"
        android:title="@string/dark_ui_mode"
        android:summary="@string/dark_ui_mode_summary"
        android:fragment="com.android.settings.display.darkmode.DarkModeSettingsFragment"
        settings:controller="com.android.settings.display.DarkUIPreferenceController" />

    <PreferenceCategory
        android:key="theme_customization_category"
        android:title="@string/themes_fonts_category">

        <!-- Font style -->
        <Preference
            android:key="android.theme.customization.fonts"
            android:title="@string/theme_customization_font_title"
            android:summary="@string/theme_customization_font_summary"
            android:fragment="com.evolution.settings.fragments.themes.Fonts" />

        <!-- Lockscreen Clock Font style -->
        <Preference
            android:key="android.theme.customization.lockscreen_clock_font"
            android:title="@string/lockscreen_clock_font_title"
            android:summary="@string/lockscreen_clock_font_summary"
            android:fragment="com.evolution.settings.fragments.themes.LockScreenClockFont" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="themes_navbar_category"
        android:title="@string/themes_navbar_category">

        <!-- Navbar Style -->
        <Preference
            android:key="android.theme.customization.navbar"
            android:title="@string/theme_customization_navbar_title"
            android:summary="@string/theme_customization_navbar_summary"
            android:fragment="com.evolution.settings.fragments.themes.NavBar" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="themes_icons_category"
        android:title="@string/themes_icons_category">

        <!-- Icon pack -->
        <Preference
            android:key="android.theme.customization.icon_pack"
            android:title="@string/theme_customization_icon_pack_title"
            android:summary="@string/theme_customization_icon_pack_summary"
            android:fragment="com.evolution.settings.fragments.themes.SystemIcons" />

        <!-- Adaptive icon pack -->
        <Preference
            android:key="android.theme.customization.adaptive_icon_shape"
            android:title="@string/theme_customization_icon_shape_title"
            android:summary="@string/theme_customization_icon_shape_summary"
            android:fragment="com.evolution.settings.fragments.themes.IconShapes" />

        <!-- Wifi icon style -->
        <Preference
            android:key="android.theme.customization.wifi_icon"
            android:title="@string/theme_customization_wifi_icon_title"
            android:summary="@string/theme_customization_wifi_icon_summary"
            android:fragment="com.evolution.settings.fragments.themes.WifiIcons" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="status_bar_signal_category"
        android:title="@string/themes_statusbar_icons_category">

        <!-- Signal icon style -->
        <Preference
            android:key="android.theme.customization.signal_icon"
            android:title="@string/theme_customization_signal_icon_title"
            android:summary="@string/theme_customization_signal_icon_summary"
            android:fragment="com.evolution.settings.fragments.themes.SignalIcons" />

        <!-- Data icon style -->
        <Preference
            android:key="android.customization.sb_data"
            android:title="@string/theme_customization_data_icon_title"
            android:summary="@string/theme_customization_data_icon_summary"
            android:fragment="com.evolution.settings.fragments.themes.DataIcons" />

    </PreferenceCategory>

</PreferenceScreen>
